<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="update-date-created-trigger-insert-only" author="BLCK">
        <sql>
            DROP TRIGGER IF EXISTS trigger_set_date_created ON user_tasks;
        </sql>

        <sql>
            CREATE TRIGGER trigger_set_date_created
            BEFORE INSERT ON user_tasks
            FOR EACH ROW
            EXECUTE FUNCTION set_date_created();
        </sql>
    </changeSet>

</databaseChangeLog>